{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(levelname)-4s  [%(filename)s:%(funcName)20s():l %(lineno)d] %(message)s",
            "datefmt": "%Y-%m-%d:%H:%M:%S"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        }
    },

    "loggers": {
        "idtxl": {
            "level": "DEBUG",
            "handlers": ["console"],
            "propagate": true
        }
    },

    "root": {
        "level": "INFO",
        "handlers": ["console"]
    }
}